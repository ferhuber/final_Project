/*////////////////////////////////////////////////////////////////////////
//  08 - Testimonials
///////////////////////////////////////////////////////////////////////*/


#testimonials{
	text-align: center;
}
#testimonials .testimonial > img {
    border-radius: 100%;
    margin-bottom: 15px;
}
#testimonials .testimonial {
	padding: 25px;
}


/*////////////////////////////////////////////////////////////////////////
//  09 - Contact
///////////////////////////////////////////////////////////////////////*/


#contact{
	color: white;
    font-size: 1.5em;
    font-family: 'Quicksand';
    text-align: center;
    padding-left: 9%;
}
#contact h1{color: white}

.form-control-white {
    background: #ffffff;
    color: #f16169;
    border: 1px solid #f16169;
    border-radius: 5px;
    margin-bottom: 20px;
}

.form-control-white::-webkit-input-placeholder { /* WebKit browsers */
    color:    #f16169;
     border-radius: 4px;
}
.form-control-white:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
    color:    #f16169;
    opacity:  1;
}
.form-control-white::-moz-placeholder { /* Mozilla Firefox 19+ */
    color:    #f16169;
    opacity:  1;
}
.form-control-white:-ms-input-placeholder { /* Internet Explorer 10+ */
    color:    #f16169;
}

.product-quote {
    position: relative;
    border: 1.5px solid #ffffff;
    padding: 1%;
    margin: 2%;
    margin-left: 8%;
    padding-top: 2%;
    height: 140px;
}

#contact > .bottom3 {
    position: relative;
    bottom: 3px;
    text-align: center;
    width: 100%;
    margin-left: -35px;
}
#contact > .bottom3 img {
    width: 50px;
}
#contact > .bottom3 #scrollToContent{
    color: #ffffff;
    font-size: 1.4em;
    font-family: "Quicksand";
    text-decoration: none;
}

#contact .btn{
    background-color: #ffffff;
    padding-left: 40px;
    padding-right: 40px;
    margin-left: 9%;
    margin-bottom: 7%;
    margin-top: 4%
}

#contact .product-quote #cake{
    position: inherit;
    float: left;
    margin-left: 22%;
}


/*////////////////////////////////////////////////////////////////////////
//  10 - Footer
///////////////////////////////////////////////////////////////////////*/


#footer{ background: #242424; color: white;}
#footer a{
    color: #f16169;
}



/*////////////////////////////////////////////////////////////////////////
//  11 - Responsive styles
///////////////////////////////////////////////////////////////////////*/


@media (max-width: 767px){
	.blog-post {
		margin-bottom: 40px;
	}

	.recent-work {
		background-position: center;
	}

	.recent-work:before {
		opacity: 1;
	}

	.recent-work span {
		opacity: 1;
	}
}

@media (max-width: 480px) {
	#drawer-right {
		padding: 10px 20px;
	}

	#drawer-right .nav-pills>li>a {
		font-size: 17px;
	}

	.nav-stacked>li+li {
		margin-top: 0;
	}

	.nav>li>a {
		padding: 8px 15px;
	}

.nav>li>a:focus, .nav>li>a:hover{
  text-decoration: none;
  background-color: rgba(241, 97, 105, 0.17);
}

	#drawer-right .social {
		margin-top: 5px;
	}

	#header {
		background-size: cover;
	}
}
