<div class="container-fluid form-template">
  <div class="row">
    <div class="  col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-2 col-lg-10 col-lg-offset-2">

        <h1>new products</h1>
        <%=simple_form_for @product do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :calories %>
        <%= f.input :image %>
        <%= f.submit 'Save', class: 'btn btn-primary' %>
        <% end %>

    </div>
  </div>
</div>
