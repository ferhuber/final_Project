<div class="container-fluid ">
  <div class="row product-background">
    <div class="col-lg-12">



  <div class="menu col-lg-12">
    <div class="pull-right">
      <p><%= link_to  "< BACK", root_path	 %></p>
    </div>
    <div class="pull-left">
      <p>MENU</p>
    </div>
  </div>

<div class="search col-lg-12">
  <%= form_tag "/search", method: :get do %>

  <%= select_tag "flavour", options_for_select(@flavours),prompt: "Flavours" %>
    <%= select_tag "calories", options_for_select(@calories), prompt: "Calories" %>
    <%= select_tag "type_of", options_for_select(@types),prompt: "Types" %>

    <%= submit_tag "Search", class: "search-button" %>
    <% end %>

  </div>
  <div class="gallery col-lg-offset-1 col-lg-10 ">

    <% if  @found.present? %>

    <% @found.each do |f| %>
    <div class="gallery-thumb">
      <a href="#" class="recent-work" style="background-image:url(<%=  f.image %>)">
          <p class="prod-hover-desc"><%= f.title %><br><i class="fa fa-star fa-1x"></i>
          <i class="fa fa-star fa-1x"></i>
          <i class="fa fa-star fa-1x"></i>
          <i class="fa fa-star fa-1x"></i></p>
  				<span class="btn btn-o-white">See More</span>
  		</a>

    </div>
    <% end %>
    <% else %>

      <% @products.each do |p| %>
      <div class="gallery-thumb">
        <a href="#" class="recent-work" style="background-image:url(<%=  p.image %>)">
            <p class="prod-hover-desc"><%= p.title %><br><i class="fa fa-star fa-1x"></i>
            <i class="fa fa-star fa-1x"></i>
            <i class="fa fa-star fa-1x"></i>
            <i class="fa fa-star fa-1x"></i></p>
    				<span  href="/products/<%= p.id %>/show_image_details" class="btn btn-o-white" data-toggle="modal" data-target="#imageModal">See More</span>
    		</a>
      </div>

    <% end %>
    <% end %>
  </div>

  <div id="imageModal" class="modal fade modal-style" role="dialog">
        <div class="modal-dialog">

          <!-- Modal content-->
          <div class="modal-content">

          </div>
        </div>
    </div>

  </div>
</div>
