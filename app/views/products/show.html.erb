<div class="container-fluid form-template">
  <div class="row">
    <div class="  col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-2 col-lg-10 col-lg-offset-2">


      <div class="size" style="width: 200px; font-size: 20px">

      <%#= @products.each do |p| %>
      <%#= image_tag p.image %>
      <!-- <p>title:<%#= p.title %></p>
      <p>desc:<%#= p.description %></p>
      <p>calories:<%#= p.calories %></p> -->
      <%# end %>

      <%= form_tag "/search", method: :get do %>

        Calories:<%= select_tag "calories", options_for_select(@calories) %>
        Flavours:<%= select_tag "flavour", options_for_select(@flavours) %>
        Type:<%= select_tag "type_of", options_for_select(@types) %>


        <%#= select_tag "ingredient", options_from_collection_for_select(@ingredients, "id", "ingredient") %>
        <%#= select_tag "title", options_from_collection_for_select(@products, "id", "title") %>
        <%# select_tag "type_of", options_from_collection_for_select(@types, "id", "type_of"), unique: true %>

        <%#= select_tag "calories",options_from_collection_for_select(@products.includes(:calories), :id, :title) %>
        <%= submit_tag "Go" %>
      <% end %>

      <a href="#" class="recent-work" style="border: solid; background :url('<%=@products[0].image %>') "></a>

      <% if  @product.present?%>
      <%= image_tag @product[0].image %>


      <%= @product.length %>
      <%#= @product_f.length %>
      <%#= @product_t.length %>

      <%#= image_tag @product_f[0].image %>
      <% else %>
      <p>Search not match</p>


      <% end %>

      </div>
    </div>
  </div>
</div>
