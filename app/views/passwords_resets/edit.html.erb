<div class="container-fluid form-template">
  <div class="row">
    <div class="  col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-2 col-lg-10 col-lg-offset-2">

      <h1> Password Reset </h1>
      <%= form_for @customer, :url => { :controller => "passwords_resets", :action => "update"} do |f|%>

        <div class="field form-group" id="password_reset">
          <%= f.label :first_name, class: 'control-label form-label' %>
          <%= f.text_field :first_name, class: 'form-control form-input' %>
        </div>

        <div class = "field form-group " id="password_reset">
          <%= f.label :last_name, class: 'control-label form-label' %>
          <%= f.text_field :last_name, class: 'form-control form-input' %>
        </div>

        <div class = "field form-group " id="password_reset">
          <%= f.label :email, class: 'control-label form-label' %>
          <%= f.email_field :email, class: 'form-control form-input' %>
        </div>

        <div class = "field form-group ">
          <%= f.label :new_password, class: ' control-label form-label' %>
          <%= f.password_field :password, class: 'form-control form-input' %>
        </div>

        <div class = "field form-group ">
          <%= f.label :password_confirmation, class: 'control-label form-label' %>
          <%= f.password_field :password_confirmation, class: 'form-control form-input' %>
        </div>

        <%= f.submit class: 'btn'  %>
      <% end %>

    </div>
  </div>
</div>
