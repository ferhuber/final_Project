<div class="container-fluid form-template">
  <div class="row close-button">
    <button  class="fa fa-times-circle fa-2x pull-right" data-dismiss="modal"></button>
    
    <div class="col-md-12 hr-modal">
      <hr>
    </div>
    <div class="sessions  col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-1 col-lg-8 col-lg-offset-2">

<br><br>
    <h2>Sign Up</h2>
    <%= @customer.errors.full_messages.join(', ') %>
    <%= simple_form_for @customer do |f| %>
    <div>
      <p>First Name:</p>
      <%= f.text_field :first_name %>
    </div>
    <div>
      <p>Last Name:</p>
      <%= f.text_field :last_name %>
    </div>
    <div>
      <p>E-mail:</p>
      <%= f.email_field :email %>
    </div>
    <div>
      <p>Phone</p>
      <%= f.text_field :phone %>
    </div>
    <div>
      <p>Address:</p>
      <%= f.text_field :address %>
    </div>
    <div>
      <p>Password:</p>
      <%= f.password_field :password %>
    </div>
    <div>
      <p>Confirm Password</p>
      <%= f.password_field :password_confirmation %>
    </div>
<br>
    <div class="button">
      <%= f.submit 'Sign Up' %>
    </div>


    <% end %>

  </div>
</div>
<hr class="hr-modal-botton">
</div>
