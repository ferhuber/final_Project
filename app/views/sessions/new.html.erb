<div class="container-fluid form-template">
  <div class="row">
    <%= link_to 'X',  root_path, class: "pull-right back-cust"%>
    <div class="sessions  col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-4 col-lg-8 col-lg-offset-3">
        <br>
        <%= form_tag sessions_path do %>
          <div>
            <p>Email:</p>
            <%= email_field_tag :email %>
          </div>
          <div>
          <p>Password:</p>
            <%= password_field_tag :password %>
          </div>
          <%= link_to 'Forgot password?', new_passwords_reset_path %>
          <br>          <br>
          <div class="button">
            <%= submit_tag 'Sign In' %>
          </div>
          <br>
        <% end %>
        <%= link_to 'Don\'t have an account? Sign Up', new_customer_path ,{ 'data-toggle' => 'modal', 'data-target' =>'#imageModal'}%>
    </div>
  </div>
</div>
