<div class="container-fluid form-template">
  <div class="row">
    <div class="  col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-2 col-lg-10 col-lg-offset-2">

      <div class="modal-body">
        <%= form_for @customer, :url => { :controller => "passwords", :action => "update"}  do |f|%>
          <div class = "field form-group ">
            <%= f.label :new_password, class: ' control-label form-label' %>
            <%= f.password_field :password, class: 'form-control form-input' %>
          </div>

          <div class="field form-group ">
            <%= f.label :password, class: ' control-label form-label' %>
            <%= f.password_field :password, class: 'form-control form-input' %>
          </div>

          <div class="field form-group ">
            <%= f.label :password_confirmation, class: 'control-label form-label' %>
            <%= f.password_field :password, class: 'form-control form-input' %>
          </div>

          <%= f.submit "Update",class: 'btn'  %>
        <%end%>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>

    </div>
  </div>
</div>
